<style>
  /* Enhanced logo styling at 3x size */
  .logo {
    transition: transform 0.2s ease;
    text-decoration: none;
  }
  
  .logo:hover {
    transform: scale(1.02);
  }
  
  .logo svg {
    max-width: 540px; /* 3x the original 180px */
    height: auto;
    filter: drop-shadow(0 4px 12px rgba(0, 0, 0, 0.1));
  }

  /* Initial state - all elements start invisible */
  .circle-1, .circle-1-highlight, .letter-m,
  .circle-2, .circle-2-highlight, .letter-v,
  .circle-3, .circle-3-highlight, .letter-p,
  .company-name, .tagline {
    opacity: 0;
  }

  /* Animation replay on hover */
  .logo:hover svg {
    animation: replay 0.1s ease;
  }

  @keyframes replay {
    0% { transform: scale(1); }
    50% { transform: scale(1.01); }
    100% { transform: scale(1); }
  }

  /* Responsive scaling while maintaining 3x base size */
  @media (max-width: 768px) {
    .logo svg {
      max-width: 450px; /* 3x the original 150px */
    }
  }

  @media (max-width: 600px) {
    .logo svg {
      max-width: 360px; /* 3x the original 120px */
    }
  }

  @media (max-width: 480px) {
    .logo svg {
      max-width: 300px; /* 3x the original 100px */
    }
  }
</style>

